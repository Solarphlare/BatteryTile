<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="24dp"
    android:paddingTop="24dp">

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:importantForAccessibility="no"
        android:id="@+id/tile_state_dialog_header_icon"
        android:src="@drawable/ic_toggle_on" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tile_state_dialog_header_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/dialog_tile_state_picker_title"
        android:id="@+id/tile_text_disambiguation_dialog_title"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/gs_flex"/>

</androidx.constraintlayout.widget.ConstraintLayout>
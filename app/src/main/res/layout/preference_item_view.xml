<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.LinearLayout">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingVertical="15dp">

        <TextView
            android:id="@+id/preference_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/gs_flex_medium"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            tools:text="Preference Title" />

        <TextView
            android:id="@+id/preference_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/gs_text"
            android:textColor="?android:textColorSecondary"
            tools:text="Preference description goes here." />
    </LinearLayout>

</merge>